
start = 
  element testSuite { 
    element testCase|bug { (correct-nonxml & correct-xml) | incorrect-nonxml }*
  }

correct-xml = element xml { xml-resources, element correct { rng } }

xml-resources = (element resource { name, rng }
                 | element dir { name, xml-resources })*

correct-nonxml = element nonxml { 
                   nonxml-resources,
                   element correct { nonxml }
                 }

nonxml-resources =  (element resource { name, nonxml }
                     | element dir { name, nonxml-resources })*

incorrect-nonxml = element nonxml { xml-resources, element incorrect { nonxml } }

nonxml = attribute encoding { token }?, text

rng = externalRef "../../doc/nonxml/relaxng.rnx"

name = attribute name { string }
